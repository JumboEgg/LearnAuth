<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_24px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textTitleRegisterLecture"
        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"/>

    <!--    수료증 텍스트 중심으로 정렬-->
    <TextView
        android:id="@+id/textTitleRegisterLecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 강의 등록하기"
        style="@style/heading1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textTitleRegisterLecture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleEntireLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 강의 정보"
            style="@style/heading2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의 제목"
            style="@style/heading3"
            android:textColor="@color/text_gray"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextTitle"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_radius_20"
            android:textColorHint="@color/text_gray"
            app:boxStrokeColor="@color/button_gray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="등록할 강의의 이름을 작성하세요"
                android:paddingStart="14dp"
                android:textColor="@color/text_gray"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            style="@style/heading3"
            android:textColor="@color/text_gray"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editCategory"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_radius_20"
            android:textColorHint="@color/text_gray"
            app:boxStrokeColor="@color/button_gray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="등록할 강의의 카테고리 설정"
                android:paddingStart="14dp"
                android:textColor="@color/text_gray"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의 목표"
            style="@style/heading3"
            android:textColor="@color/text_gray"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextGoal"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_radius_20"
            android:textColorHint="@color/text_gray"
            app:boxStrokeColor="@color/button_gray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="강의 목표를 간단하게 작성해 주세요."
                android:paddingStart="14dp"
                android:textColor="@color/text_gray"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의 내용"
            style="@style/heading3"
            android:textColor="@color/text_gray"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextContent"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_radius_20"
            android:textColorHint="@color/text_gray"
            app:boxStrokeColor="@color/button_gray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="강의 내용을 자유롭게 작성해 주세요."
                android:paddingStart="14dp"
                android:textColor="@color/text_gray"
                android:maxLines="5"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>