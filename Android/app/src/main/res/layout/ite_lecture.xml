<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:elevation="0.3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 고양이 이미지 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/lectureImage"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ImageRoundedCorner"/>

        <!-- 카테고리 (법률) -->
        <TextView
            android:id="@+id/subject"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:text="데이터"
            android:textColor="@color/text_white_blue"
            android:background="@drawable/bg_radius_7"
            android:backgroundTint="@color/button_white_blue"
            style="@style/semibold12"
            android:paddingVertical="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/lectureImage"
            app:layout_constraintTop_toTopOf="@id/lectureImage"
            android:textAlignment="center"/>

        <!-- 강의 제목 -->
        <TextView
            android:id="@+id/lectureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쉽고 유용한 근로기준법"
            style="@style/semibold16"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/subject"
            app:layout_constraintTop_toTopOf="@id/subject"
            app:layout_constraintBottom_toBottomOf="@id/subject"
            android:layout_marginEnd="12dp"/>

        <!-- 학습률 텍스트 -->
        <TextView
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            style="@style/semibold14"
            android:textColor="@color/text_white_blue"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/subject"
            app:layout_constraintBottom_toBottomOf="@id/lectureImage"/>



            <TextView
                android:id="@+id/lectureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이어보기"
                style="@style/heading4"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toStartOf="@id/forwardIcon"
                app:layout_constraintTop_toTopOf="@id/forwardIcon"
                app:layout_constraintBottom_toBottomOf="@id/forwardIcon"/>

            <ImageView
                android:id="@+id/forwardIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/arrow_forward"
                app:tint="@color/primary_color"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
