<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="25dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/textTitleSearchParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 검색"
        style="@style/heading2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 검색 입력 영역 (searchContainer) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editSearchParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_border"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitleSearchParticipants">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchInputText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:hint="이메일을 입력해주세요."
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/searchBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/primary_color"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/clearBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="검색 지우기"
            android:src="@drawable/cancel"
            app:layout_constraintBottom_toBottomOf="@id/searchInputText"
            app:layout_constraintEnd_toStartOf="@id/searchBtn"
            app:layout_constraintTop_toTopOf="@id/searchInputText"
            app:tint="@color/button_gray" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUserList"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/editSearchParticipants"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:elevation="8dp"
        android:translationZ="8dp"
        tools:visibility="gone"
        tools:listitem="@layout/item_register_search_participants"/>

    <TextView
        android:id="@+id/textNoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색 결과가 없습니다."
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        style="@style/body2"
        app:layout_constraintTop_toBottomOf="@+id/editSearchParticipants"
        app:layout_constraintBottom_toTopOf="@+id/linearBtn" />


    <!-- 사용자 선택 결과 표시 -->
    <LinearLayout
        android:id="@+id/layoutSelectedUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/editSearchParticipants"
        app:layout_constraintStart_toStartOf="@+id/editSearchParticipants"
        app:layout_constraintBottom_toTopOf="@+id/linearBtn"
        android:visibility="gone">

        <TextView
            android:id="@+id/textSelectedUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택된 사용자 이름"
            style="@style/heading3"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textSelectedUserNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(선택된 사용자 닉네임)"
            app:layout_constraintTop_toBottomOf="@+id/editSearchParticipants"
            app:layout_constraintStart_toStartOf="@+id/editSearchParticipants"
            app:layout_constraintBottom_toTopOf="@+id/linearBtn"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록하시겠습니까?"
            style="@style/body3"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSearchParticipants"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterParticipants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="등록하기"
            android:background="@drawable/bg_radius_20"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            style="@style/heading4"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="취소"
            android:background="@drawable/bg_radius_20"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white_blue"
            android:textColor="@color/primary_color"
            android:layout_marginStart="10dp"
            style="@style/heading4"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>