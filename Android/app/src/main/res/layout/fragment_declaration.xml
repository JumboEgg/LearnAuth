<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
    android:id="@+id/backBtn"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/arrow_back_24px"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="@+id/tvTitle"
    android:layout_marginTop="30dp" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고 조회하기"
        style="@style/heading1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/decSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="자세한 내용을 확인하려면 항목을 클릭해 주세요."
        style="@style/medium14"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_goneMarginTop="16dp"
        android:layout_marginHorizontal="25dp"/>


    <!-- 신고수 -->
    <TextView
        android:id="@+id/tvReportCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="신고수 : 0건"
        style="@style/medium14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decSubTitle"
        android:layout_marginHorizontal="25dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvReportCount"
        android:layout_marginHorizontal="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
